{
    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock", "idle_inhibitor"],
    "modules-right": ["tray" , "pulseaudio", "custom/power"],
    "hyprland/workspaces": {
	"format": "{icon}",
        "format-icons": {
                "active": "ÔÑë",
